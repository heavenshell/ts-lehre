{
  "timezone": "Asia/Tokyo",
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "pinDigests": false,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ]
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "groupName": "dependencies"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    }
  ],
  "ignoreDeps": [
  ],
  "schedule": [
    "after 10pm and before 5am on monday"
  ]
}
